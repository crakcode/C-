#include<iostream>

using namespace std;

int main() {
	int x1, x2;
	int sum, mult, div;


	//사칙 연산자
	x1 = 10; x2 = 20;
	sum = x1 + x2; // " + "는 덧셈의 연산자이다.
	mult = x1 * x2;// " *" 는 곱셈의 연산자이다.
	div = x1 / x2; // " / "는 나눗셈의 연산자이다.

	x1+=x2;// x1의 x1+x2를 더한다는 의미이다.;


	//전위 후위 증감연산자
	//전위 증감연산자 실행문에서 값이 먼저 증가/감소해서 적용됩니다. 
	int a = 1;
	int b = ++a;
	//a=2 b=2가 된다

	//후위 증감연산자 실행문에서 값이 후에 증가/감소해서 적용됩니다.
	int c = 1;
	int d = c++;
	//c=2 d=1 이된다. 

	//비교 연산자
	cout << "(7==5):" << (7 == 5) << endl; //" == " 앞뒤가 같은지를 비교한다. 같으면 참을 반환
	cout << "(7>=5):" << (7 >= 5) << endl; //" >= " 같거나 크다 로 비교한다. 만약 연산자가 참이라면 참을반환
	cout << "(7!=5):" << (7 != 5) << endl; //" != " 앞두가 다른지를 비교한다. 다르다면 참을 반환한다.
	cout << "(7<=5):" << (7 <= 5) << endl;
	cout << "(7>=5) ? 100:-100):" << (7 >= 5 ? 100 : -100) << endl; //조건식이 참이면 100을 반환 조건식이 거짓이면 -100을 반환한다.

	



	system("pause");
}
